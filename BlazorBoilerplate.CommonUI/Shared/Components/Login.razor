@using Microsoft.AspNetCore.Components
@inject NavigationManager navigationManager
@inject AuthenticationStateProvider authStateProvider

<AuthorizeView Context="AuthorizeContext">
    <Authorized>
        <MatTooltip Tooltip="Выйти">
            <MatButton Icon="account_box" 
                       Raised="true" 
                       Label="Выйти" 
                       Style="border-radius: 3px; padding-left: 20px; box-shadow: 1px 0 1px 0 rgba(255, 173, 173, 1), 3px 1px 1px -2px rgba(0, 0, 0, 0.2), 7px 1px 5px 0 rgba(0, 0, 0, 0.12)" 
                       RefBack="@context" 
                       OnClick="LogoutClick">
            </MatButton>
        </MatTooltip>
    </Authorized>
    <NotAuthorized>
        <MatTooltip Tooltip="Войти">
            <MatButton Icon="exit_to_app" 
                       Raised="true" 
                       Label="Войти" 
                       Style="border-radius: 3px; padding-left: 20px; box-shadow: 1px 0 1px 0 rgba(255, 173, 173, 1), 3px 1px 1px -2px rgba(0, 0, 0, 0.2), 7px 1px 5px 0 rgba(0, 0, 0, 0.12)" 
                       RefBack="@context" 
                       Link="/account/login">
            </MatButton>
        </MatTooltip>
    </NotAuthorized>
</AuthorizeView>

@code {
    async Task LogoutClick()
    {
        await ((IdentityAuthenticationStateProvider)authStateProvider).Logout();
        navigationManager.NavigateTo("/account/login");
    }
}
