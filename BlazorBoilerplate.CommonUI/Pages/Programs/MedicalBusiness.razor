        <Animation Effect="@(IsRightSlide ? Effect.FadeInRight : Effect.FadeInLeft)" Speed="@Speed.Fast" Delay="@Delay.None" Enabled="IsAnimated" IterationCount="1" OnAnimationEnd="AnimationEnd">
            <MedicalBusinessTestInfo />
        </Animation>
